<%- model_class = TodoList -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:task_name) %>:</strong></dt>
  <dd><%= @todo_list.task_name %></dd>
  <!--
  <dt><strong><%# model_class.human_attribute_name(:create_date) %>:</strong></dt>
  <dd><%# @todo_list.create_date %></dd>
  -->
  <dt><strong><%= model_class.human_attribute_name(:limit) %>:</strong></dt>  
  <dd><%= @todo_list.limit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag) %>:</strong></dt>
  <dd><%= @todo_list.tag %></dd>
  <!--
  <dt><strong><%# model_class.human_attribute_name(:delete_flag) %>:</strong></dt>
  <dd><%# @todo_list.delete_flag %></dd>
  -->
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              todo_lists_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_todo_list_path(@todo_list), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              todo_list_path(@todo_list),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
